{% extends "layout.twig" %}

    {% block title %}
        {{ product.name }}
    {% endblock %}
{% block head %}

    {#Product info SEO#}
    <meta property="og:image" content="/img/{{ product.image }}"/>
    <meta property="product:pretax_price:currency" content=""/>
    <meta property="product:price:amount" content=""/>
    <meta property="product:price:currency" content=""/>
    <meta property="product:weight:value" content=""/>
    <meta property="product:weight:units" content=""/>
    {#Product info SEO#}
{% endblock %}

    {#<title>TEST PROJET</title>#}

{# No price attribute !! #}

{% block current_page_title %}Product: {{ product.name }}{% endblock %}
{% block content %}

    {% if  status %}
        <section class="container" role="application">
            <div class="row">
                <div class="col-4">
                    <figure>
                        {#alt attribute add #}
                        <img class="card-img-top border pb-2" src="/img/{{ product.image }}" alt="{{ product.name }}"/>
                        {#<figcaption>{{ product.name }}</figcaption>#}
                    </figure>
                </div>
                <div class="col-8">
                    <p>{{ product.description }}</p>
                    <p>Stock level: {{ product.stock }}</p>
                    <a class="btn btn-primary" href="/cart/{{ product.id }}">Buy</a>
                </div>
            </div>
        </section>
    {% else %}
        <div class="mt-4 alert alert-danger">
            {{ message }}
        </div>
    {% endif %}


    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <hr class="mt-4 mb-4">
            </div>
            <div class="col-md-12">
                <a href="/products/list">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}
